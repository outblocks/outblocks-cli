{
  "title": "JSON schema for OutBlocks project configuration files",
  "$schema": "http://json-schema.org/draft-07/schema",
  "$ref": "#/definitions/OutblocksProject",
  "definitions": {
    "OutblocksProject": {
      "title": "Outblocks",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "dns": {
          "description": "Project-wide DNS setup.",
          "$ref": "#/definitions/DNS"
        },
        "state": {
          "description": "Project-wide state source.",
          "$ref": "#/definitions/State"
        },
        "dependencies": {
          "description": "Project-wide dependencies to provision.",
          "$ref": "#/definitions/Dependencies"
        },
        "plugins": {
          "description": "Project-wide plugins.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Plugin"
          }
        }
      },
      "required": []
    },
    "DNS": {
      "title": "DNS",
      "type": "array",
      "items": {
        "additionalProperties": false,
        "properties": {
          "domain": {
            "type": "string"
          },
          "plugin": {
            "type": "string"
          }
        },
        "required": [
          "domain"
        ]
      }
    },
    "State": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type": {
          "type": "string"
        },
        "env": {
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "title": "State"
    },
    "Dependencies": {
      "title": "Dependencies",
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[_a-zA-Z][a-zA-Z0-9_-]*$": {
          "type": "object",
          "properties": {
            "type": {
              "description": "The type of the dependency.",
              "type": "string"
            }
          },
          "required": [
            "type"
          ]
        }
      }
    },
    "Plugin": {
      "title": "Plugin",
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}