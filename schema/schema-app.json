{
  "title": "JSON schema for OutBlocks App configuration files",
  "$schema": "http://json-schema.org/draft-07/schema",
  "$ref": "#/definitions/OutblocksApp",
  "definitions": {
    "OutblocksApp": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "description": "Name override (defaults to directory name).",
          "type": "string"
        },
        "url": {
          "description": "External URL.",
          "type": "string"
        },
        "needs": {
          "description": "Application dependencies to inject.",
          "$ref": "#/definitions/Needs"
        },
        "build": {
          "description": "Build override.",
          "$ref": "#/definitions/Build"
        }
      },
      "required": [],
      "title": "Outblocks"
    },
    "Needs": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[_a-zA-Z][a-zA-Z0-9_-]*$": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object"
            }
          ]
        }
      },
      "title": "Needs"
    },
    "Build": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "command": {
          "type": "string"
        },
        "dir": {
          "type": "string"
        }
      },
      "required": [
        "command"
      ],
      "title": "Build"
    }
  }
}