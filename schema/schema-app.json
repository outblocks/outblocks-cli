{
  "title": "JSON schema for Outblocks App configuration files",
  "$schema": "http://json-schema.org/draft-04/schema",
  "$ref": "#/definitions/OutblocksApp",
  "definitions": {
    "OutblocksApp": {
      "title": "OutblocksApp",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "description": "Name override (defaults to directory name).",
          "type": "string"
        },
        "type": {
          "description": "Type override (defaults to parent directory name).",
          "type": "string",
          "enum": ["static", "function", "service"]
        },
        "url": {
          "description": "External URL.",
          "type": "string"
        },
        "needs": {
          "description": "Application dependencies to inject.",
          "$ref": "#/definitions/Needs"
        },
        "dev": {
          "description": "Dev config used for dev builds (during run).",
          "$ref": "#/definitions/Dev"
        },
        "build": {
          "description": "Build config used for production builds (during deployments).",
          "$ref": "#/definitions/Build"
        },
        "src": {
          "description": "Source definition.",
          "type": "string"
        },
        "routing": {
          "description": "Routing type (defaults to 'react').",
          "type": "string",
          "enum": ["react", "disabled"]
        },
        "cdn": {
          "description": "CDN settings.",
          "$ref": "#/definitions/CDN"
        }
      }
    },
    "Needs": {
      "title": "Needs",
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[_a-zA-Z][a-zA-Z0-9_-]*$": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object"
            }
          ]
        }
      }
    },
    "Dev": {
      "title": "Dev",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "command": {
          "type": "string"
        }
      }
    },
    "Build": {
      "title": "Build",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "command": {
          "type": "string"
        },
        "dir": {
          "type": "string"
        }
      }
    },
    "CDN": {
      "title": "CDN",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    }
  }
}