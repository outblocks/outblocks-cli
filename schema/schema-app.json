{
  "title": "JSON schema for Outblocks App configuration files",
  "$schema": "http://json-schema.org/draft-04/schema",
  "$ref": "#/definitions/OutblocksApp",
  "definitions": {
    "OutblocksApp": {
      "title": "OutblocksApp",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "description": "Name override (defaults to directory name).",
          "type": "string"
        },
        "url": {
          "description": "External URL.",
          "type": "string"
        },
        "needs": {
          "description": "Application dependencies to inject.",
          "$ref": "#/definitions/Needs"
        },
        "build": {
          "description": "Build override.",
          "$ref": "#/definitions/Build"
        },
        "routing": {
          "description": "Routing type (defaults to 'react').",
          "type": "string"
        }
      }
    },
    "Needs": {
      "title": "Needs",
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[_a-zA-Z][a-zA-Z0-9_-]*$": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object"
            }
          ]
        }
      }
    },
    "Build": {
      "title": "Build",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "command": {
          "type": "string"
        },
        "dir": {
          "type": "string"
        }
      }
    }
  }
}